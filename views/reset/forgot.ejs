<div class="row">
	<div class="col-md-12">
		<form action="/reset/forgot" method="POST">
			<legend>Forgot Password</legend>
			<div class="form-group">
				<label for="username">Email</label>
				<input type="email" name="username" autofocus class="form-control" required>
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-outline-primary" value="Reset Password">
			</div>
		</form>
	</div>
</div>
