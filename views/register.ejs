<%- include('./partials/header')%>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <form class="form-page" action="/user/register", method="POST">
                <h1 class="text-center h3 mb-3 font-weight-normal">Sign Up!</h1>
                <div class="form-group">
                    <label for="firstName" class="sr-only">First Name</label>
                    <input class="form-control first-field" id="firstName" type="text" name="firstName" placeholder="First Name" required>
                    <label for="lastName" class="sr-only">Last Name</label>
                    <input class="form-control middle-field" id="lastName" type="text" name="lastName" placeholder="Last Name">
                    <label for="username" class="sr-only">Username/Email</label>
                    <input class="form-control middle-field" id="username" type="email" name="username" placeholder="Email" required>
                    <label for="password" class="sr-only">Password</label>
                    <input class="form-control last-field" id="password" type="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input class="btn btn-md btn-outline-primary btn-block" type="submit" value="Sign Up">
                </div>
                <a href="/">Go Back</a>
            </form>
        </div>
    </div> 
</div>
<%- include('./partials/footer')%>